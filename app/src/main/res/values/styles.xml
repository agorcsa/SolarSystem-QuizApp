<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
    T

    <style name="WrapContent.AppTitle">
        <item name="android:text">@string/solar_system</item>
        <item name="android:textSize">@dimen/appTitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
        <item name="android:layout_marginTop">@dimen/appTitle_marginTop</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerticalLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_centerHorizontal">@bool/layout_centerHorizontal</item>
        <item name="android:layout_alignParentBottom">@bool/layout_alignParentBottom</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom</item>
    </style>

    <style name="WrapContent.SansSerifWhite">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WrapContent.SansSerifOrange">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/light_orange</item>
    </style>

    <style name="WrapContent.SansSerifOrange.QuestionTitle">
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:layout_marginTop">@dimen/marginTopText</item>
        <item name="android:layout_marginBottom">@dimen/marginBottomText</item>
    </style>

    <style name="WrapContent.SansSerifWhite.QuestionText">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="WrapContent.RadioButton">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:buttonTint">@color/light_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:checked">true</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="WrapContent.CheckVector">
        <item name="android:background">@drawable/ic_check_black_24dp</item>
        <item name="android:layout_alignParentBottom">@bool/layout_alignParentBottom</item>
        <item name="android:layout_alignParentRight">@bool/layout_alignParentRight</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom</item>
        <item name="android:layout_marginRight">@dimen/layout_marginRight</item>
    </style>

    <style name="WrapContent.ClearVector">
        <item name="android:background">@drawable/ic_clear_black_24dp</item>
        <item name="android:layout_alignParentBottom">@bool/layout_alignParentBottom</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom</item>
        <item name="android:layout_marginRight">@dimen/layout_marginRight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
